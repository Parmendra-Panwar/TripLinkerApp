{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@features/*": ["src/features/*"],
      "@services/*": ["src/services/*"],
      "@store": ["src/store/index"],
      "@hooks": ["src/hooks/index"],
      "@constants/*": ["src/constants/*"],
      "@types": ["src/types/index"]
    }
  }
}
